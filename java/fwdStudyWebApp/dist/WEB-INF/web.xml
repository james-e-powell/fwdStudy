<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>OpenURL 1.0 resolver</display-name>
        <description>
              OpenURL 1.0 resolver
        </description>
                  	
    <servlet>
        <servlet-name>fwd</servlet-name>
        <servlet-class>gov.lanl.fwdStudy.fwdUriSearch</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>fwd</servlet-name>
        <url-pattern>/fwd/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>fwdSimSearch</servlet-name>
        <servlet-class>gov.lanl.fwdStudy.fwdSimsSearch</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>fwdSimSearch</servlet-name>
        <url-pattern>/fwdSimSearch/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>fwdCiteSearch</servlet-name>
        <servlet-class>gov.lanl.fwdStudy.fwdCiteSearch</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>fwdCiteSearch</servlet-name>
        <url-pattern>/fwdCiteSearch/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>fwdRefSearch</servlet-name>
        <servlet-class>gov.lanl.fwdStudy.fwdRefsSearch</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>fwdRefSearch</servlet-name>
        <url-pattern>/fwdRefSearch/*</url-pattern>
    </servlet-mapping>

</web-app>
